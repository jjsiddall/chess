<%= simple_form_for @move, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :piece %>
  <%= f.input :square %>
  <%= f.input :summary %>
  <%= f.association :exercise %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                moves_path, :class => 'btn btn-default' %>
<% end %>

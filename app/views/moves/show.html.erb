<%- model_class = Move -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:piece) %>:</strong></dt>
  <dd><%= @move.piece %></dd>
  <dt><strong><%= model_class.human_attribute_name(:square) %>:</strong></dt>
  <dd><%= @move.square %></dd>
  <dt><strong><%= model_class.human_attribute_name(:summary) %>:</strong></dt>
  <dd><%= @move.summary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exercise_id) %>:</strong></dt>
  <dd><%= @move.exercise_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              moves_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_move_path(@move), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              move_path(@move),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

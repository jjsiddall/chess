<%= simple_form_for(@exercise) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :summary %>
    <%= f.association :lesson %>
    <%= f.input :setup, as: :text  %>
    <%= f.input :conclusion %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
